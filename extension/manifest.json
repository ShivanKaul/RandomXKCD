{
    "manifest_version": 2,
    "name": "RandomXKCD",
    "short_name": "RandXKCD",
    "description": "Get a random XKCD comic every time you open a new tab.",
    "version": "0.0.1",
    "homepage_url": "http://shivankaul.com",
    "chrome_url_overrides": {
        "newtab": "src/index.html"
    },
    "permissions": [
        "http://xkcd.com/*", "https://xkcd.com/*"
    ],
    "icons": {
        "128": "images/xkcd.png"
    },
    "background": {
        "scripts": ["src/js/xkcd.js"]
    }
}
